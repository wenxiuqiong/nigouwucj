<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".user.RegisterActivity"
    android:orientation="vertical">

    <include layout="@layout/nav_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.example.thingfinding.MyImageView
                android:id="@+id/touxiang"
                style="@style/image_one"
                android:layout_gravity="center"
                android:layout_marginLeft="100dp"
                android:src="@drawable/log"/>

            <EditText
                android:id="@+id/etIdCard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/itemHeight"
                android:layout_gravity="center"
                android:background="@null"
                android:layout_marginTop="@dimen/marginSize"
                android:hint="请输入你的身份证号码"
                android:paddingLeft="@dimen/marginSize"
                android:textSize="@dimen/registerEvSize" />

            <View
                style="@style/line"/>

            <EditText
                android:id="@+id/etusername"
                android:layout_width="match_parent"
                android:layout_height="@dimen/itemHeight"
                android:layout_gravity="center"
                android:background="@null"
                android:layout_marginTop="@dimen/marginSize"
                android:hint="请输入你的用户名"
                android:paddingLeft="@dimen/marginSize"
                android:textSize="@dimen/registerEvSize" />

            <View
                style="@style/line"/>

            <EditText
                android:id="@+id/etname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/itemHeight"
                android:layout_gravity="center"
                android:background="@null"
                android:layout_marginTop="@dimen/marginSize"
                android:hint="请输入你的名字"
                android:paddingLeft="@dimen/marginSize"
                android:textSize="@dimen/registerEvSize" />

            <View
                style="@style/line"/>

            <EditText
                android:id="@+id/etphone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/itemHeight"
                android:layout_gravity="center"
                android:background="@null"
                android:layout_marginTop="@dimen/marginSize"
                android:hint="请输入你的电话号码"
                android:paddingLeft="@dimen/marginSize"
                android:textSize="@dimen/registerEvSize" />

            <View
                style="@style/line"/>

            <EditText
                android:id="@+id/etstoreName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/itemHeight"
                android:layout_gravity="center"
                android:background="@null"
                android:layout_marginTop="@dimen/marginSize"
                android:hint="请输入你的店铺名称"
                android:paddingLeft="@dimen/marginSize"
                android:textSize="@dimen/registerEvSize" />

            <View
                style="@style/line"/>

            <EditText
                android:id="@+id/etemail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/itemHeight"
                android:layout_gravity="center"
                android:background="@null"
                android:layout_marginTop="@dimen/marginSize"
                android:hint="请输入你的邮箱编码"
                android:paddingLeft="@dimen/marginSize"
                android:textSize="@dimen/registerEvSize" />

            <View
                style="@style/line"/>

            <EditText
                android:id="@+id/etstoreadress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/itemHeight"
                android:layout_gravity="center"
                android:background="@null"
                android:layout_marginTop="@dimen/marginSize"
                android:hint="请输入你的店铺地址"
                android:paddingLeft="@dimen/marginSize"
                android:textSize="@dimen/registerEvSize" />

            <View
                style="@style/line"/>

            <EditText
                android:id="@+id/etstoreintroduction"
                android:layout_width="match_parent"
                android:layout_height="@dimen/itemHeight"
                android:layout_gravity="center"
                android:background="@null"
                android:layout_marginTop="@dimen/marginSize"
                android:hint="请简要介绍你的店铺"
                android:paddingLeft="@dimen/marginSize"
                android:textSize="@dimen/registerEvSize" />

            <View
                style="@style/line"/>

            <EditText
                android:id="@+id/etpwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/itemHeight"
                android:layout_gravity="center"
                android:background="@null"
                android:layout_marginTop="@dimen/marginSize"
                android:hint="请输入你的登录密码"
                android:paddingLeft="@dimen/marginSize"
                android:textSize="@dimen/registerEvSize" />

            <View
                style="@style/line"/>

            <EditText
                android:id="@+id/etpawdagin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/itemHeight"
                android:layout_gravity="center"
                android:background="@null"
                android:layout_marginTop="@dimen/marginSize"
                android:hint="请确认你的登录密码"
                android:paddingLeft="@dimen/marginSize"
                android:textSize="@dimen/registerEvSize" />

            <View
                style="@style/line"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/itemHeight"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:paddingLeft="@dimen/marginSize"
                    android:textSize="@dimen/registerEvSize" />

                <TextView
                    android:id="@+id/codeBtn"
                    style="@style/commit_btn"
                    android:layout_width="200dp"
                    android:text="获取验证码"
                    android:textColor="#fff"
                    android:textSize="18sp" />
            </LinearLayout>

            <View
                style="@style/line"/>

            <Button
                android:id="@+id/zhuce"
                style="@style/commit_btn"
                android:layout_marginTop="@dimen/marginSize"
                android:layout_marginBottom="@dimen/marginSize"
                android:text="注    册" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
