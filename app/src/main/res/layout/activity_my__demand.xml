<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user.My_DemandActivity">

    <include layout="@layout/nav_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="472dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:paddingTop="0dp">

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/border">

                <LinearLayout
                    android:layout_width="301dp"
                    android:layout_height="89dp"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/nameText"
                            android:layout_width="114dp"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/xinghao1"
                            android:gravity="center"
                            android:hint="姓名(必填)"
                            android:singleLine="true"
                            android:textColor="#000"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/phoneText"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/xinghao1"
                            android:hint="电话（必填）"
                            android:singleLine="true"
                            android:textColor="#000"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="286dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="0dp">

                        <EditText
                            android:id="@+id/addText"
                            android:layout_width="299dp"
                            android:layout_height="40dp"
                            android:drawableLeft="@drawable/xinghao1"
                            android:gravity="fill|center"
                            android:hint="地址（必填）"
                            android:singleLine="true"
                            android:textColor="#000"
                            android:textSize="16dp" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="4dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:background="#002efd">

                </View>

                <LinearLayout
                    android:layout_width="99dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp">

                    <TextView
                        android:id="@+id/addressbookText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="地址簿"
                        android:textColor="#000"
                        android:textSize="20dp" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/border"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.61"
                tools:layout_editor_absoluteX="8dp">

                <TextView
                    android:layout_width="78dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="类型:"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="match_parent"
                    android:layout_height="42dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.366"
                tools:layout_editor_absoluteX="0dp">

                <TextView
                    android:layout_width="109dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="服务内容"
                    android:textColor="#000"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="fill"
                    android:layout_marginTop="0dp">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="84dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/dog2" />

                    <EditText
                        android:id="@+id/demand"
                        android:layout_width="304dp"
                        android:layout_height="72dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/border3"
                        android:drawableLeft="@drawable/xinghao1"
                        android:hint="请详细描述你提供的服务（必填）"
                        android:textColor="#000"
                        android:textSize="16dp" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:layout_marginTop="0dp">

                <LinearLayout
                    android:layout_width="204dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/border2"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/originalpriceText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/xinghao1"
                        android:hint="原价（必填）" />

                    <EditText
                        android:id="@+id/promotionalpriceText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="促销价" />

                    <EditText
                        android:id="@+id/stockText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="库存量" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="201dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/border2"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/costText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="材料费用/宠料费" />

                    <EditText
                        android:id="@+id/typeText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="维修材质/宠物类型" />

                    <EditText
                        android:id="@+id/chargeText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="服务费/保养费" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/releasebtn"
                style="@style/commit_btn"
                android:layout_marginTop="6dp"
                android:text="发  布"
                android:textSize="18dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
