<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:text="下单时间："
            android:textColor="#bfbfbf"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:text="下单时间："
            android:textColor="#bfbfbf"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <TextView
                android:id="@+id/stateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单状态"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_marginRight="4dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/ivIconSize"
            android:layout_height="@dimen/ivIconSize"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/marginSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ivIconSize"
            android:orientation="vertical">


            <TextView
                android:id="@+id/commoditynameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/marginSize"
                android:layout_marginLeft="@dimen/marginSize"
                android:paddingRight="@dimen/marginSize"
                android:text="商品名称"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/priceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/marginSize"
                android:layout_marginLeft="@dimen/marginSize"
                android:layout_marginTop="@dimen/marginSize"
                android:layout_gravity="center"
                android:text="共1件商品 合计：￥100"
                android:textColor="#000000" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <Button
            android:id="@+id/stateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/BtnTop"
            android:layout_marginRight="@dimen/marginSize"
            android:layout_marginBottom="@dimen/BtnTop"
            android:background="@drawable/framebtn"
            android:text="删除订单"
            android:textColor="#000000"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>