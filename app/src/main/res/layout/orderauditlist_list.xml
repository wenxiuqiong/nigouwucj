<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/ivIconSize"
            android:layout_height="@dimen/ivIconSize"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/marginSize"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ivIconSize"
            android:orientation="vertical">

            <TextView
                android:id="@+id/commoditynameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginSize"
                android:paddingLeft="@dimen/marginSize"
                android:paddingRight="@dimen/marginSize"
                android:text="商品名称"
                android:textColor="#000000"
                android:textSize="20dp"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/marginSize"
            android:textColor="#9c9999"
            android:textSize="20dp"
            android:text=" 原   价：" />


        <TextView
            android:id="@+id/yuanjiaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginSize"
            android:text="原价"
            android:textColor="#9c9999"
            android:textSize="20dp"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/marginSize"
            android:text="促销价："
            android:textColor="#9c9999"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/cuxiaojiaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginSize"
            android:text="促销价"
            android:textColor="#9c9999"
            android:textSize="20dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/marginSize"
            android:text="宠粮费："
            android:textColor="#9c9999"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/chonliangfeiText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginSize"
            android:text="宠粮费"
            android:textColor="#9c9999"
            android:textSize="20dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/marginSize"
            android:text="保养费："
            android:textColor="#9c9999"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/baoyangfeiText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginSize"
            android:text="保养费"
            android:textColor="#9c9999"
            android:textSize="20dp"/>

    </LinearLayout>

</LinearLayout>