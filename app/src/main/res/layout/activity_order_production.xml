<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#d6eddd"
            android:gravity="center">

            <TextView
                android:id="@+id/exitText"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text=" ^←^"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="订单制作"
                android:textColor="#000"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border2">

            <TextView
                android:id="@+id/nameText"
                android:layout_width="154dp"
                android:layout_height="39dp"
                android:background="@drawable/border2"
                android:gravity="fill_vertical"
                android:text="姓名"
                android:textColor="#000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/phoneText"
                android:layout_width="276dp"
                android:layout_height="39dp"
                android:background="@drawable/border2"
                android:gravity="fill_vertical"
                android:text="电话"
                android:textColor="#000"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/border2">

            <TextView
                android:id="@+id/addText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/border2"
                android:gravity="fill|center"
                android:text="地址"
                android:textColor="#000"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:background="@drawable/border2">

            <ImageView
                android:id="@+id/image"
                android:layout_width="107dp"
                android:layout_height="94dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:background="@drawable/border2" />

            <LinearLayout
                android:layout_width="269dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/border2"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/commoditynameText"
                    android:layout_width="257dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:text="商品名称"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/priceText"
                    android:layout_width="257dp"
                    android:layout_height="29dp"
                    android:layout_gravity="center"
                    android:text="共1件商品 合计：￥100"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:layout_marginTop="0dp">

            <LinearLayout
                android:layout_width="173dp"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:background="@drawable/border2"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/originalpriceText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="原价" />

                <EditText
                    android:id="@+id/promotionalpriceText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="促销价" />

                <EditText
                    android:id="@+id/stockText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="库存量" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="201dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/border2"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/costText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="材料费用/宠料费" />

                <EditText
                    android:id="@+id/typeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="维修材质/宠物类型" />

                <EditText
                    android:id="@+id/chargeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="服务费/保养费" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/border2">
            <TextView
                android:id="@+id/liuyanText"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:text="客户留言："
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:layout_width="284dp"
                android:layout_height="80dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:paddingTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView9"
            app:layout_constraintVertical_bias="0.483"
            tools:layout_editor_absoluteX="0dp">

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/border"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.087"
                tools:layout_editor_absoluteX="0dp">

                <LinearLayout
                    android:layout_width="286dp"
                    android:layout_height="78dp"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/manufactornameText"
                            android:layout_width="109dp"
                            android:layout_height="37dp"
                            android:background="@drawable/border2"
                            android:gravity="center"
                            android:hint="厂家"
                            android:textColor="#000"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/manufactorphoneText"
                            android:layout_width="177dp"
                            android:layout_height="37dp"
                            android:background="@drawable/border2"
                            android:gravity="center"
                            android:hint="厂家电话"
                            android:textColor="#000"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="286dp"
                        android:layout_height="41dp"
                        android:layout_marginTop="0dp">

                        <EditText
                            android:id="@+id/manufactoraddText"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/border2"
                            android:gravity="fill|center"
                            android:hint="厂家地址"
                            android:textColor="#000"
                            android:textSize="16dp" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="4dp"
                    android:layout_height="66dp"
                    android:layout_gravity="center"
                    android:background="#002efd">

                </View>

                <LinearLayout
                    android:layout_width="99dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp">

                    <TextView
                        android:id="@+id/addressbookText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/border2"
                        android:gravity="center"
                        android:text="地址簿"
                        android:textColor="#000"
                        android:textSize="20dp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border2">

            <Button
                android:id="@+id/subimtBtn"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/shape"
                android:text="提交"
                android:textSize="18dp" />

            <Button
                android:id="@+id/deteleBtn"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/shape"
                android:text="删除"
                android:textSize="18dp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
