<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/marginSize"
                android:gravity="fill_vertical"
                android:text="嚯嚯"
                android:textColor="#000"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/phoneText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginSize"
                android:gravity="fill_vertical"
                android:text="17263859875"
                android:textColor="#000"
                android:textSize="20dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/addressText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_vertical"
            android:text="广东石油化工学院"
            android:paddingLeft="@dimen/marginSize"
            android:textColor="#000"
            android:textSize="20dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/ivIconSize"
            android:layout_height="@dimen/ivIconSize"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/marginSize"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ivIconSize"
            android:orientation="vertical">


            <TextView
                android:id="@+id/commoditynameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginSize"
                android:paddingLeft="@dimen/marginSize"
                android:paddingRight="@dimen/marginSize"
                android:text="商品名称"
                android:textColor="#000000"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/shuliangText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/marginSize"
                android:paddingLeft="@dimen/marginSize"
                android:layout_marginTop="@dimen/marginSize"
                android:text="共1件商品"
                android:textColor="#000000"
                android:textSize="18dp"/>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/marginSize"
            android:textColor="#9c9999"
            android:textSize="20dp"
            tools:text=" 原   价：" />


        <TextView
            android:id="@+id/yuanjiaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginSize"
            android:text="原价"
            android:textColor="#9c9999"
            android:textSize="20dp"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/marginSize"
            android:text="促销价："
            android:textColor="#9c9999"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/cuxiaojiaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginSize"
            android:text="促销价"
            android:textColor="#9c9999"
            android:textSize="20dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/marginSize"
            android:text="宠粮费："
            android:textColor="#9c9999"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/chonliangfeiText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginSize"
            android:text="宠粮费:"
            android:textColor="#9c9999"
            android:textSize="20dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/marginSize"
            android:text="保养费："
            android:textColor="#9c9999"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/baoyangfeiText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginSize"
            android:text="保养费"
            android:textColor="#9c9999"
            android:textSize="20dp"/>

    </LinearLayout>

</LinearLayout>
