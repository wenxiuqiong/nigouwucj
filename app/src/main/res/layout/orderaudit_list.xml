<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:background="@drawable/border2">

            <TextView
                android:id="@+id/nameText"
                android:layout_width="94dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:gravity="fill_vertical"
                android:text="嚯嚯"
                android:textColor="#000"
                android:textSize="20dp"
                android:background="@drawable/border2"/>
            <TextView
                android:id="@+id/phoneText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="fill_vertical"
                android:text="17263859875"
                android:textColor="#000"
                android:textSize="20dp"
                android:background="@drawable/border2"/>
        </LinearLayout>

        <TextView
            android:id="@+id/addressText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="fill_vertical"
            android:text="广东石油化工学院"
            android:background="@drawable/border2"
            android:textColor="#000"
            android:textSize="20dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:background="@drawable/border2">

        <ImageView
            android:id="@+id/image"
            android:layout_width="118dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:background="@drawable/border2"/>

        <LinearLayout
            android:layout_width="196dp"
            android:layout_height="118dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/border2"
            android:orientation="vertical">


            <TextView
                android:id="@+id/commoditynameText"
                android:layout_width="187dp"
                android:layout_height="57dp"
                android:layout_gravity="center"
                android:text="商品名称"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/shuliangText"
                android:layout_width="187dp"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:text="共1件商品"
                android:textColor="#000000" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="117dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/border2" >

            <TextView
                android:id="@+id/yuanjiaText"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:text="原价"
                android:textColor="#9c9999"
                android:textSize="14dp"
                android:background="@drawable/border2"/>

            <TextView
                android:id="@+id/cuxiaojiaText"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:text="促销价"
                android:textColor="#9c9999"
                android:textSize="14dp"
                android:background="@drawable/border2"/>

            <TextView
                android:id="@+id/chonliangfeiText"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:text="宠粮费"
                android:textColor="#9c9999"
                android:textSize="14dp"
                android:background="@drawable/border2"/>

            <TextView
                android:id="@+id/baoyangfeiText"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:text="保养费"
                android:textColor="#9c9999"
                android:textSize="14dp"
                android:background="@drawable/border2"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>