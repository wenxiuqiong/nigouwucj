<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.thingfinding.user.OrderauditActivity">

    <include layout="@layout/nav_bar"/>

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navBarHeight"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/audited"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="已审核"
            android:textColor="@drawable/bottom_icon_text_selector"
            android:background="@drawable/bottom_background_selector"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/unaudited"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="未审核"
            android:textColor="@drawable/bottom_icon_text_selector"
            android:background="@drawable/bottom_background_selector"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/not_pass"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="未通过"
            android:textColor="@drawable/bottom_icon_text_selector"
            android:background="@drawable/bottom_background_selector"
            android:textSize="20dp" />


    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineColor"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" >
    </android.support.v4.view.ViewPager>


</LinearLayout>
