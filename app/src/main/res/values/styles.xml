<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/mainColor</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    </style>

    <style name="text_one">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="text_two">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="text_three" parent="text_two">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="text_four" parent="text_two">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="text_five" parent="text_two">
        <item name="android:layout_width">143dp</item>
        <item name="android:textColor">#9f9d9d</item>
        <item name="android:layout_marginBottom">148dp</item>
    </style>

    <style name="button" parent="text_two">
        <item name="android:layout_width">135dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:background">#fafa</item>
        <item name="android:layout_marginBottom">256dp</item>
    </style>

    <style name="image_one" parent="text_two">
        <item name="android:layout_width">99dp</item>
        <item name="android:layout_height">99dp</item>
    </style>

    <style name="image_two" parent="image_one">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <style name="login_text" parent="text_two">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="login_etext" parent="text_two">
        <item name="android:layout_width">217dp</item>
        <item name="android:layout_height">42dp</item>
    </style>

    <style name="checkbar" parent="text_two">
        <item name="android:layout_width">26dp</item>
        <item name="android:layout_height">26dp</item>
    </style>

    <style name="login_text_two" parent="text_two">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#636363</item>
    </style>

    <style name="login_text_three" parent="login_text_two">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">30dp</item>

    </style>

    <style name="login_button" parent="text_two">
        <item name="android:textColor">#000</item>
        <item name="android:background">#fafa</item>
    </style>

    <style name="linearLayout">
        <item name="android:layout_width">398dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="main_text">
        <item name="android:layout_height">112dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="main_image" parent="linearLayout">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
    </style>

    <style name="main_text_two" parent="linearLayout">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">16dp</item>

        <item name="android:textSize">12dp</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/demo_selector</item>
    </style>

    <style name="main_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="login2_button_two" parent="linearLayout">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">#cae8fa</item>
    </style>


    <style name="mystyle" parent="@android:style/Theme.Dialog">

        <!--Dialog的windowFrame框为无 -->

        <item name="android:windowFrame">@null</item>

        <!--是否浮现在activity之上-->

        <item name="android:windowIsFloating">true</item>

        <!--是否半透明-->

        <item name="android:windowIsTranslucent">false</item>

        <!--是否显示title-->

        <item name="android:windowNoTitle">true</item>

        <!--设置dialog的背景-->

        <item name="android:windowBackground">@drawable/beijing</item>

        <!-- 背景是否模糊显示-->

        <item name="android:backgroundDimEnabled">true</item>

    </style>



    <style name="demoStyle">

        <item name="android:button">@null</item>

        <item name="android:textSize">12dp</item>

        <item name="android:textColor">@drawable/demo_selector</item>  <!--引用selector-->

    </style>


    <style name="AnimationActivity" parent="@android:style/Animation.Activity">

        <!--打开Activity时，新进入的Activity执行的动画-->
        <item name="android:activityOpenEnterAnimation">@anim/open_enter</item>
        <!--打开Activity时，原Activity执行的动画-->
        <item name="android:activityOpenExitAnimation">@anim/open_exit</item>
        <!--退出Activity时，重新进入的Activity执行的动画-->
        <item name="android:activityCloseEnterAnimation">@anim/close_enter</item>
        <!--退出Activity时，退出的Activity执行的动画-->
        <item name="android:activityCloseExitAnimation">@anim/close_exit</item>
    </style>

    <style name="line">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/lineColor</item>
        <item name="android:layout_margin">@dimen/marginSize</item>
    </style>

    <style name="commit_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btnHeight</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/navBarTitleSize</item>
        <item name="android:layout_marginLeft">@dimen/marginSize</item>
        <item name="android:layout_marginRight">@dimen/marginSize</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_commit_select</item>
    </style>


</resources>
