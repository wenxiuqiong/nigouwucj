<?xml version="1.0" encoding="utf-8"?>

<resources>

    <declare-styleable name="roundedimageview">

        <attr
            name="border_thickness"
            format="dimension" />

        <attr
            name="border_inside_color"
            format="color" />

        <attr
            name="border_outside_color"
            format="color">

        </attr>
    </declare-styleable>
        <!--声明样式-->


        <declare-styleable name="inputview">
            <!--输入框前的图标-->
            <attr name="input_icon" format="reference"></attr>
            <!--提示内容-->
            <attr name="input_hint" format="string"></attr>
            <!--是否需要以密文形式展示-->
            <attr name="input_password" format="boolean"></attr>
        </declare-styleable>




    </resources>